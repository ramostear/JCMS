/*
 * sidebar-sm
 * 缩小状态下的导航栏样式
 * ======================
 */
.sidebar-sm {
    width: 50px;
    //左侧菜单
    .side-menu {
        user-select:none;
        -moz-user-select:none;
        -webkit-user-select:none;
        -ms-user-select:none;
        -khtml-user-select:none;
        
        width: 100%;
        max-width: 200px;
        padding: 0px 0px 0px 0px;
        ul {
            padding: 0px 0px 0px 0px;
        }
        .ul-header {
            margin-left: 30px; 
            min-width: 160px;
            display: none;
        }
        .link-none,
        .link {
            z-index: 1000;
            color: @color-gray-pale;
            border-left: 3px solid transparent;
            cursor: pointer;
            display: block;
            padding: 10px 15px 12px 35px;
            color: @sidebar-link-color;
            font-size: 14px;
            font-weight: 500;
            position: relative;
            -webkit-transition: all 0s ease;
            -o-transition: all 0s ease;
            transition: all 0s ease;
            width: 50px;
            height: 40px;
        }
        .link:hover {
            z-index: 1000;
            width: 230px;
            color: @color-gray-pale;
            background-color: darken(@body-bg, 3%);
            border-left: 3px solid @color-secondary;
            -webkit-transition: all 0s ease;
            -o-transition: all 0s ease;
            transition: all 0s ease;
        }
        .submenu {
            z-index: 1000;
            display: none;
            font-size: 14px;
            margin-left: 30px;
            position: absolute;
            a {
                z-index: 1000;
                display: block;
                text-decoration: none;
                color: darken(@sidebar-link-color, 10%);
                background-color: lighten(@body-bg, 5%);
                padding: 12px;
                margin-left: 20px;
                width: 180px;
            }
            a:hover {
                color: @color-gray-pale;
            }
            li a span {
                margin-left: 10px; 
                display: block; 
                width: 160px;
            }
        }
        li {
            max-height: 40px;
            i {
                position: absolute;
                top: 13px;
                left: 12px;
                font-size: 14px;
                color: @sidebar-link-color;
            }
            i.icon-chevron-left{
                display: none;
            }
        }
        li.open {
            max-height: 40px;
            > a {
                width: 230px;
                color: @color-gray-pale;
                background-color: darken(@body-bg, 3%);
                border-left: 3px solid @color-secondary;
                -webkit-transition: all 0s ease;
                -o-transition: all 0s ease;
                transition: all 0s ease;    
            }
        }
    }
    
    //用户头像与名称和状态
    .side-user {
        user-select:none;
        -moz-user-select:none;
        -webkit-user-select:none;
        -ms-user-select:none;
        -khtml-user-select:none;
        background: darken(@body-bg, 5%); 
        padding: 10px 10px 10px 9px;
        .user-name {
            margin-left: 10px; 
            font-size: 14px; 
            color: @color-gray-pale;
            a {
                margin-left: 30px;
            }
        }
    }
    
    #head {
        width: 30px;
        height: 30px;
    }
    
    //搜索框和搜索按钮
    .search-group {
        margin-top: 20px;
        input {
            width: 140px;
            height: 30px;
            background-color: #2C3B41;
            border: 0px;
            outline: none;
            border-top-left-radius: 3px;
            border-bottom-left-radius: 3px;
        }
        input[type="search"]:focus {
            background-color: #FFFFFF;
            border: none;
            outline: none;
        }
        button {
            background-color: #2C3B41;
            border: none;
            height: 30px;
            width: 40px;
            padding: 0px 0px 0px 0px;
            outline: none;
            border-top-right-radius: 3px;
            border-bottom-right-radius: 3px;
        }
        button[type="submit"]:focus {
            text-shadow: none;
            background-color: #FFFFFF;
            border: none;
            outline: none;
        }
    }
    
    //sidebar顶部按钮
    .side-btn {
        display: block;
        padding: 12px 0px 12px 0px;
        text-align: center;
        -webkit-transition: all 0s ease;
        -o-transition: all 0s ease;
        transition: all 0s ease;
        i {
            font-size: 18px;
            color: @sidebar-link-color;
        }
    }
    
    .side-btn:hover {
        color: @color-gray-pale;
        background-color: darken(@body-bg, 3%);
        -webkit-transition: all 0s ease;
        -o-transition: all 0s ease;
        transition: all 0s ease;
    }
}

