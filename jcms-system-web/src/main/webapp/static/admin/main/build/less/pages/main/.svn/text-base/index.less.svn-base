//产品与服务下拉菜单
.dropdown-menu-big {
    width: 1000px;
    ul > ul {
       list-style: none; 
    }
}

//右侧全部内容（包含quick-nav和main-content）
.main-right {
    width: auto;
    overflow-y: auto;
    background-color: @main-content-bg;
    //快捷导航栏
    .quick-nav {
        overflow: hidden; 
        width: 100%; 
        height: 40px; 
        background-color: @quick-nav-bg; 
        float: left; display: none;
    }
    //主要内容
    .main-content {
        width: 100%; 
        background-color: @main-content-bg;
        h1{margin-left: 10px;};
    }
}

.message-menu {
    width: 280px;
    .message-num {
        margin-left: 10px; 
        margin-top: 5px;
    }
    
    .message {
        border-top: 1px solid #f1f1f1;
        
        a{
            padding-top: 10px;
        }
        
        b {
            margin-left: 10px;
        }
        
        span {
            font-size: 10px;
            color: #808080;
            margin-left: 100px;
        }
        
        p {
            margin-left: 50px;
            color: #808080;
        }
    }
    
    .text-center {
        margin: 10px 0 5px 0;
    }
}
